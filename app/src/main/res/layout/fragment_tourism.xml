<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:background="@android:color/background_light">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/historicallogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="58dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/image1"
            android:layout_alignParentTop="true"
            android:layout_marginStart="41dp" />

        <ImageButton
            android:id="@+id/religiouslogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/image2"
            android:layout_alignTop="@+id/historicallogo"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:id="@+id/gallerylogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/historicallogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:background="@android:color/background_light"
            app:srcCompat="@drawable/image4" />

        <TextView
            android:id="@+id/historical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Historical Places"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_below="@+id/historicallogo"
            android:layout_alignStart="@+id/historicallogo"
            android:layout_alignLeft="@+id/historicallogo" />

        <TextView
            android:id="@+id/Religious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Religious Places"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_below="@+id/religiouslogo"
            android:layout_alignStart="@+id/religiouslogo"
            android:layout_alignEnd="@+id/religiouslogo"
            android:layout_alignLeft="@+id/religiouslogo"
            android:layout_alignRight="@+id/religiouslogo" />

        <TextView
            android:id="@+id/gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Museums and Gallery"
            android:layout_below="@+id/gallerylogo"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>